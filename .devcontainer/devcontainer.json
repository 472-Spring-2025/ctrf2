{
    "name": "Development",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/opt/pwn.college",
    "workspaceMount": "source=${localWorkspaceFolder},target=/opt/pwn.college,type=bind",
    "runArgs": ["-v", "/tmp/dojo-data-${devcontainerId}:/data"],
    "privileged": true,
    "overrideCommand": false,
    "portsAttributes": {
        "22": {
            "label": "SSH",
            "onAutoForward": "silent"
        },
        "80": {
            "label": "HTTP",
            "protocol": "http",
            "onAutoForward": "openPreview"
        },
        "443": {
            "label": "HTTPS",
            "onAutoForward": "silent"
        }
    },
    "onCreateCommand": "echo HERE IS IP INFO; ip a; ip route; uname -a; dojo wait || (docker logs workspace-builder; ip a)",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}
